<%- include("partials/header") %>
<link rel="stylesheet" href="/stylesheets/new.css" />

<div class="ui main text container segment">
  <div class="ui huge header">
    Edit <%= foundBlog.title %>
  </div>
  <form
    class="ui form"
    action="/blogs/<%= foundBlog._id %>?_method=PUT"
    method="POST"
  >
    <div class="field">
      <label>Title</label>
      <input type="text" name="blog[title]" value="<%= foundBlog.title %>" />
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" name="blog[image]" value="<%= foundBlog.image %>" />
    </div>
    <div class="field">
      <label>Blog Content</label>
      <textarea name="blog[body]"><%= foundBlog.body %></textarea>
    </div>
    <button class="ui violet big basic button">Submit</button>
  </form>
</div>

<%- include("partials/footer") %>
